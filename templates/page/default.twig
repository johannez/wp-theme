{% extends "base.twig" %}

{% block content %}

    <article class="page" id="page-{{ page.ID }}">
        <div class="container">
            <section class="page__header">
                <h1 class="page__title">{{ page.title }}</h1>
            </section>

            <section class="page__content">

                <div class="page__body">{{ page.post_content|relative_links }}</div>

            </section>
        </div>
    </article>

{% endblock %}
